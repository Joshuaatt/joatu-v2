= simple_form_for(@offer) do |f|
  = f.error_notification

  .form-inputs
    = f.input :type, collection: @offer_types, as: :radio_buttons, label: "#{t('offers.type_label')}:"
    = f.input :title
    = f.input :description, as: :text

  .form-actions
    = f.button :submit, class: 'pull-right btn-primary'
