.row.offers-list
  .col-sm-4
    .panel.panel-info
      .panel-heading
        %h2.text-center Search
      .panel-body
        = simple_form_for @search_form, url: search_offers_path, wrapper: :inline_form, html: {method: :get, class: 'form-inline'} do |f|
          = f.input :search, placeholder: t('offers.search_placeholder')
          = f.button :submit, t('offers.search')

        %br
        = link_to new_offer_path, class: 'btn btn-success pull-right' do
          %i.glyphicon.glyphicon-plus
          = t('offers.new_link') 
  .col-sm-8
    .panel.panel-default
      .panel-heading
        %h1.text-center= t('offers.index_header')
      - if @offers.empty?
        .panel-body
          = t('offers.empty')
      .list-group
        = render partial: "offers/offer_list_item", collection: @offers
        = paginate @offers
