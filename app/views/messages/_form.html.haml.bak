%h2
  = t('mailbox.message.new')

= form_tag messages_path, method: :post, class: :new_message do
  - if @receipt && @receipt.errors.any?
    .alert.alert-warning.alert-dismissable{role: :alert}
      %button.close{type: :button, 'data-dismiss': :alert, 'aria-label': t('close')}
        %span{'aria-hidden': true}
          &times;
      %h2
        = t('mailbox.message.error_header')
      %ul
        - @receipt.errors.full_messages.each do |msg|
          %li
            = msg
        - end
  - end

  .form-inputs
    = label_tag t('mailboxer.form.recipients')
    = hidden_field_tag :_recipients, @recipient.try(:id)

    = label_tag t('mailboxer.form.subject')
    = text_field_tag :subject, nil

    = label_tag t('mailboxer.form.body')
    = text_area_tag :body

  .form-actions
    = f.button :submit
