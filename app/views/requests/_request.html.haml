= div_for request, class: "panel panel-default" do
  .panel-heading
    %h3.panel-title= request.title
  .panel-body
    = request.summary
    .btn-group-sm.pull-right
      - if request.user.profile.present? && request.user.profile.id.present?
        = link_to profile_path(id: request.user.profile.id), class: 'btn btn-primary' do
          %span.glyphicon.glyphicon-user.pull-right
      = link_to new_message_path(receiver: request.user.id), class: 'btn btn-primary' do
        %span.glyphicon.glyphicon-envelope.pull-right
      = link_to request, class: 'btn btn-default' do
        %span.glyphicon.glyphicon-arrow-right.pull-right
